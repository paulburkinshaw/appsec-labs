{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Schemes": {
      "Bearer": {
        "ValidAudiences": [
          "http://secure_api:8080",
          "http://insecure_api:8080"
        ],
        "ValidJwksUri": "http://authentication.api:8080/.well-known/jwks.json",
        "ValidIssuer": "appsec-labs-idp",
        "ValidKid": "appsec-labs-public-key"
      }
    }
  }
}
